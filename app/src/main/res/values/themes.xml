<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AndroidTemplateMVVM" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/background_primary</item>
        <item name="android:windowBackground">@color/background_grey</item>
        <item name="textInputStyle">@style/MyTextInputLayout</item>
        <item name="editTextStyle">@style/MyEditText</item>
        <item name="colorControlNormal">@color/edit_text_underline</item>
        <item name="colorControlActivated">@color/background_primary</item>
        <item name="SuperTextViewStyle">@style/SuperTextViewStyle</item>
    </style>

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <!-- Set the splash screen background, animated icon, and animation duration. -->
        <item name="windowSplashScreenBackground">#FFFFFF</item>

        <!-- Use windowSplashScreenAnimatedIcon to add either a drawable or an
             animated drawable. One of these is required. -->
<!--        <item name="windowSplashScreenAnimatedIcon">@drawable/...</item>-->
        <!-- Required for animated icons -->
        <item name="windowSplashScreenAnimationDuration">200</item>

        <!-- Set the theme of the Activity that directly follows your splash screen. -->
        <!-- Required -->
        <item name="postSplashScreenTheme">@style/Theme.AndroidTemplateMVVM</item>
    </style>

    <style name="scroll_view" parent="@android:style/Widget.ScrollView">
        <item name="android:scrollbarThumbVertical">@color/C_333333</item>
        <item name="android:scrollbarThumbHorizontal">@color/C_999999</item>
    </style>


</resources>