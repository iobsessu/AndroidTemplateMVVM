<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- recyclerView 滚动条 -->
    <style name="recycler_view" parent="scroll_view">
        <item name="android:fadingEdge">none</item>
        <item name="android:focusable">false</item>
        <item name="android:overScrollMode">ifContentScrolls</item>
        <item name="android:cacheColorHint">@android:color/transparent</item>
    </style>

    <style name="home_bottom_tab_title_active">
        <item name="android:textSize">@dimen/text_size_14</item>
    </style>

    <style name="home_bottom_tab_title_inactive">
        <item name="android:textSize">@dimen/text_size_12</item>
    </style>

    <style name="MyTextInputLayout" parent="Widget.Design.TextInputLayout">
        <item name="hintTextColor">@color/C_666666</item>
        <item name="counterTextColor">@color/C_666666</item>
        <item name="counterOverflowTextColor">@color/background_primary</item>
        <item name="errorTextColor">@color/text_error</item>
        <item name="helperTextTextColor">@color/background_primary</item>
        <item name="endIconTint">@color/background_primary</item>
        <item name="startIconTint">@color/background_primary</item>
    </style>

    <style name="MyEditText" parent="Widget.Design.TextInputEditText">
        <item name="android:textColor">@color/C_333333</item>
        <item name="android:textColorHint">@color/C_999999</item>
    </style>

</resources>